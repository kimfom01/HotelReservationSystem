@using Web.Models.Dtos;
@model Guest

@{
    ViewBag.Title = "Add New Guest";
    Layout = "_Layout";
}

<div class="card col-md-4">
    <form method="post">
        <div class="card-header">
            <h2>New Guest</h2>
        </div>
        <div class="card-body">
            <div class="form-floating mb-3">
                <input asp-for="@Model.FirstName" class="form-control" type="text" aria-required="true" placeholder="First name..." />
                <label asp-for="@Model.FirstName">First Name</label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.MiddleName" class="form-control" type="text" aria-required="true" placeholder="Middle name..." />
                <label asp-for="@Model.MiddleName">Middle Name</label>
                <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.LastName" class="form-control" type="text" aria-required="true" placeholder="Last name..." />
                <label asp-for="@Model.LastName">Last Name</label>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Email" class="form-control" type="email" aria-required="true" placeholder="Email address..." />
                <label asp-for="@Model.Email">Email Address</label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Phone" class="form-control" type="text" aria-required="true" placeholder="Phone number..." />
                <label asp-for="@Model.Phone">Phone</label>
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.DateOfBirth" class="form-control" type="date" aria-required="true" placeholder="Date of Birth..." />
                <label asp-for="@Model.DateOfBirth">Date of Birth</label>
                <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Add Guest" class="btn button-primary" />
            <a asp-action="Index" class="btn button-secondary">Cancel</a>
        </div>
    </form>
</div>