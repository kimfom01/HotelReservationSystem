@using Web.Models.ViewModels;
@model RoomViewModel

@{
    ViewBag.Title = "Add New Room";
    Layout = "_Layout";
}

<div class="card col-md-4">
    <form method="post">
        <div class="card-header">
            <h2>New Room</h2>
        </div>
        <div class="card-body">
            <div class="form-floating mb-3">
                <input asp-for="@Model.RoomType" class="form-control" type="text"
                       aria-required="true" placeholder="Enter room type..." />
                <label asp-for="@Model.RoomType">Room Type</label>
                <span asp-validation-for="@Model.RoomType" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.RoomPrice" class="form-control" type="number"
                       aria-required="true" placeholder="Enter price..." />
                <label asp-for="@Model.RoomPrice">Room Price</label>
                <span asp-validation-for="@Model.RoomPrice" class="text-danger"></span>
            </div>
            <div class="form-control mb-3">
                <select asp-for="@Model.Availabilty" class="form-select" required>
                    <option value="">-- Select Availabilty --</option>
                    <option selected value="True">Available</option>
                    <option value="False">Not Available</option>
                </select>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Capacity" class="form-control" type="number"
                       aria-required="true" placeholder="Enter number of people..." />
                <label asp-for="@Model.Capacity">Capacity</label>
                <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
            </div>
            <div class="form-control mb-3">
                <select asp-for="@Model.HotelId" class="form-select" required asp-items="Model.Hotels">
                    <option value="">-- Select a Hotel --</option>
                </select>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Add Room" class="btn button-primary" />
            <a asp-action="Index" class="btn button-secondary">Cancel</a>
        </div>
    </form>
</div>