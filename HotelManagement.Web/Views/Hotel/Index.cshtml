@using HotelManagement.Web.Models.Dtos;
@model List<Hotel>

@{
    ViewBag.Title = "Hotels";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<a asp-controller="Hotel" class="btn button-primary"
   asp-action="AddHotel">Add New Hotel</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.Name</td>
                <td>@hotel.Location</td>
                <td>
                    <a class="btn button-primary" asp-controller="Hotel"
                       asp-action="ManageHotel" asp-route-hotelId="@hotel.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>