@using HotelManagement.Web.Models.ViewModels;
@model List<MealViewModel>

@{
    ViewBag.Title = "Meals";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<a asp-controller="Meal" class="btn button-primary"
   asp-action="AddMeal">Add New Meal</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Meal Price</th>
            <th>Hotel Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var meal in Model)
        {
            <tr>
                <td>@meal.Name</td>
                <td>@meal.Type</td>
                <td>@meal.MealPrice</td>
                <td>@meal.HotelName</td>
                <td>
                    <a class="btn button-primary" asp-controller="Meal"
                       asp-action="ManageMeal" asp-route-mealId="@meal.MealId">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>